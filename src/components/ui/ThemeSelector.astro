---
import ThemeGridButton from "./ThemeGridButton.astro"
---

<div
  title="Change Theme"
  class="dropdown dropdown-end hidden [@supports(color:oklch(0%_0_0))]:block z-50"
>
  <div tabindex="0" role="button" class="btn btn-ghost">
    <svg
      width="20"
      height="20"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      class="h-5 w-5 stroke-current md:hidden"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
      >
      </path>
    </svg>
    <span class="hidden font-normal md:inline">Theme</span>
    <svg
      width="12px"
      height="12px"
      class="hidden h-2 w-2 fill-current opacity-60 sm:inline-block"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 2048 2048"
    >
      <path d="M1799 349l242 241-1017 1017L7 590l242-241 775 775 775-775z">
      </path>
    </svg>
  </div>
  <div
    tabindex="0"
    class="dropdown-content bg-base-200 text-base-content rounded-box top-px h-[28.6rem] max-h-[calc(100vh-10rem)] w-56 overflow-y-auto border border-white/5 shadow-2xl outline outline-1 outline-black/5 mt-16"
  >
    <div class="grid grid-cols-1 gap-3 p-3">
      <ThemeGridButton theme="light" />
      <ThemeGridButton theme="dark" />
      <ThemeGridButton theme="cupcake" />
      <ThemeGridButton theme="bumblebee" />
      <ThemeGridButton theme="emerald" />
      <ThemeGridButton theme="corporate" />
      <ThemeGridButton theme="synthwave" />
      <ThemeGridButton theme="retro" />
      <ThemeGridButton theme="cyberpunk" />
      <ThemeGridButton theme="valentine" />
      <ThemeGridButton theme="halloween" />
      <ThemeGridButton theme="garden" />
      <ThemeGridButton theme="forest" />
      <ThemeGridButton theme="aqua" />
      <ThemeGridButton theme="lofi" />
      <ThemeGridButton theme="pastel" />
      <ThemeGridButton theme="fantasy" />
      <ThemeGridButton theme="wireframe" />
      <ThemeGridButton theme="black" />
      <ThemeGridButton theme="luxury" />
      <ThemeGridButton theme="dracula" />
      <ThemeGridButton theme="cmyk" />
      <ThemeGridButton theme="autumn" />
      <ThemeGridButton theme="business" />
      <ThemeGridButton theme="acid" />
      <ThemeGridButton theme="lemonade" />
      <ThemeGridButton theme="night" />
      <ThemeGridButton theme="coffee" />
      <ThemeGridButton theme="winter" />
      <ThemeGridButton theme="dim" />
      <ThemeGridButton theme="nord" />
      <ThemeGridButton theme="sunset" />
    </div>
  </div>
</div>
